                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:padding="7dp"
                    android:hint="City*"
                    android:textColorHint="#000"
                    android:textStyle="bold"
                    android:textSize="14sp" />
