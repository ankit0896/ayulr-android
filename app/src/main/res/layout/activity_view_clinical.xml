                    <TextView
                        android:id="@+id/drotherafterto"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:editable="false"
                        android:textSize="14sp"
                        android:ems="10"/>

