                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="To"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:ems="10" >
