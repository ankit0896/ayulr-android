                        android:textSize="14sp"
                        android:ems="10"/>


                <TextView

                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="To"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:ems="10" >
