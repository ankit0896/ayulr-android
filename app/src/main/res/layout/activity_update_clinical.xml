<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/backnew"
    xmlns:tools="http://schemas.android.com/tools">
    <include layout="@layout/toolbar_updateclinical"
        android:id="@+id/toolbar"/>
    <ScrollView
        android:layout_below="@+id/toolbar"
        android:id="@+id/sclDetail"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadeScrollbars="true">
        <LinearLayout
            android:id="@+id/lytContent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/drimage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:layout_margin="5dp"
                android:src="@drawable/img_upload"
                android:layout_gravity="center"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/drimage2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:layout_margin="5dp"
                android:src="@drawable/img_upload"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/drimage3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_upload"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/drhospital"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:hint="Clinic/Hospital/Nursing Home Name*"
                    android:inputType="textCapSentences"
                    android:textSize="14sp"
                    android:ems="10" >
                </EditText>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/drfee"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:hint="Fees*"
                        android:inputType="number"
                        android:textSize="14sp"
                        android:ems="10" >
                    </EditText>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/drfeevalidday"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:hint="Valid For Days*"
                        android:inputType="number"
                        android:textSize="14sp"
                        android:ems="10" >
                    </EditText>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/drcontactno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:hint="Contact Number*"
                    android:maxLength="11"
                    android:inputType="phone"
                    android:textSize="14sp"></EditText>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/drstate"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:hint="State*"
                       android:editable="false"
                        android:textSize="14sp"
                        android:ems="10" >
                    </EditText>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/drcity"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:hint="City*"
                        android:editable="false"
                        android:textSize="14sp"
                        android:ems="10" >
                    </EditText>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/drlandmark"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:hint="Landmark"
                        android:inputType="textCapSentences"
                        android:textSize="14sp"
                        android:ems="10" >
                    </EditText>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/drpincode"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:hint="Pincode*"
                        android:inputType="number"
                        android:maxLength="6"
                        android:textSize="14sp"
                        android:ems="10" >
                    </EditText>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/draddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:hint="Clinic/Hospital/Nursing Home Address*"
                    android:inputType="textCapSentences"
                    android:textSize="14sp"
                    android:ems="10" >
                </EditText>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/edtptcnslttm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:text="Clinic/Hospital Schedule *"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/header"
                android:ems="10" >
            </TextView>

            <EditText
                android:id="@+id/drvisitday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:editable="false"
                android:hint="Visiting Days(Double tap to set)*"
                android:textSize="14sp"
                android:ems="10" >
            </EditText>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:text="Morning"
                android:textSize="14sp"
                android:ems="10" >
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/drmrngtime"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:hint="PICK TIME"
                        android:textSize="14sp"
                        android:editable="false"
                        android:ems="10" >
                    </EditText>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/txtam"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="To"
                    android:textSize="14sp"
                    android:ems="10" >
                </TextView>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/drmrngto"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:hint="PICK TIME"
                        android:editable="false"
                        android:textSize="14sp"
                        android:ems="10" >
                    </EditText>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <TextView

                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:text="Afternoon"
                android:textSize="14sp"
                android:ems="10" >
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/draftertime"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:editable="false"
                        android:hint="PICK TIME"
                        android:textSize="14sp"
                        android:ems="10" >
                    </EditText>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView

                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="To"
                    android:textSize="14sp"
                    android:ems="10" >
                </TextView>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/drafterto"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:editable="false"
                        android:hint="PICK TIME"
                        android:textSize="14sp"
                        android:ems="10" >
                    </EditText>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/txteve"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:text="Evening"
                android:textSize="14sp"
                android:ems="10" >
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/drevngtime"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:editable="false"
                        android:hint="PICK TIME"
                        android:textSize="14sp"
                        android:ems="10" >
                    </EditText>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/tvmrng"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="To"
                    android:textSize="14sp"
                    android:ems="10" >
                </TextView>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/drevngto"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:editable="false"
                        android:hint="PICK TIME"
                        android:textSize="14sp"
                        android:ems="10" >
                    </EditText>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:ems="10"
                android:gravity="center"
                android:text="Other Day Schedule"
                android:textColor="@color/header"
                android:textSize="20sp"></TextView>

            <EditText
                android:id="@+id/drothervisitday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:editable="false"
                android:hint="Visiting Days(Double tap to set)"
                android:textSize="14sp"
                android:ems="10" >
            </EditText>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:text="Morning"
                android:textSize="14sp"
                android:ems="10" >
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/drothermrngtime"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:hint="PICK TIME"
                        android:textSize="14sp"
                        android:editable="false"
                        android:ems="10" >
                    </EditText>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView

                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="To"
                    android:textSize="14sp"
                    android:ems="10" >
                </TextView>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/drothermrngto"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:hint="PICK TIME"
                        android:editable="false"
                        android:textSize="14sp"
                        android:ems="10" >
                    </EditText>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <TextView

                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:text="Afternoon"
                android:textSize="14sp"
                android:ems="10" >
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/drotheraftertime"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:editable="false"
                        android:hint="PICK TIME"
                        android:textSize="14sp"
                        android:ems="10" >
                    </EditText>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView

                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="To"
                    android:textSize="14sp"
                    android:ems="10" >
                </TextView>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/drotherafterto"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:editable="false"
                        android:hint="PICK TIME"
                        android:textSize="14sp"
                        android:ems="10" >
                    </EditText>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <TextView

                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:text="Evening"
                android:textSize="14sp"
                android:ems="10" >
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/drotherevngtime"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:editable="false"
                        android:hint="PICK TIME"
                        android:textSize="14sp"
                        android:ems="10" >
                    </EditText>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView

                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="To"
                    android:textSize="14sp"
                    android:ems="10" >
                </TextView>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/drotherevngto"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:editable="false"
                        android:hint="PICK TIME"
                        android:textSize="14sp"
                        android:ems="10" >
                    </EditText>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnsub"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/newloginbtn"
                android:text="Update Clinical"
                android:textColor="#fff"
                android:textSize="14sp"
                android:textStyle="bold" />



        </LinearLayout>
    </ScrollView>
</RelativeLayout>